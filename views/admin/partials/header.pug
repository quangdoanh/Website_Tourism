header.header
  .inner-logo
    a(href=`/${adminPathName}/dashboard`)
      span 28
      span Admin
  .inner-wrap
    .inner-notify
      img(src="assets/images/icon-bell.svg", alt="")
      span 6
    .inner-account
      .inner-avatar
        img(src=account.avatar || "", alt=account.fullName)
      .inner-text
        .inner-name #{account.fullName}
        .inner-role #{account.rolename || ""}
    button.inner-button-menu
      <i class="fa-solid fa-bars"></i>